@using PVT.Q1._2017.Shop.Areas.Content.Extentions
@using Shop.Infrastructure.Enums
@model ICollection<Shop.Common.ViewModels.AlbumViewModel>

@{
    ViewBag.Title = "Список альбомов";
}

<h2>@ViewBag.Title</h2>

@if (Request.IsAuthenticated && (User.IsInRole(UserRoles.Admin.ToString()) || User.IsInRole(UserRoles.Seller.ToString())))
{
    <p>
        @Html.BtnCreateAlbum()
    </p>
}

@Html.Partial("_AlbumsList", Model)
