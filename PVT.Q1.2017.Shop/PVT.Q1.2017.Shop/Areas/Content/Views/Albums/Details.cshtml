@model Shop.Common.Models.ViewModels.AlbumDetailsViewModel

@Html.AntiForgeryToken()
<body>
<h2 class="details-artist-title">Информация об альбоме</h2>

<div class="main">
    <div class="left-part">
        <div class="col1">
            <h1>Исполнитель: @Html.DisplayTextFor(model => model.ArtistName)</h1>
            <h2>Альбом: @Html.DisplayTextFor(model => model.Name)</h2>
            <h3>Дата выхода: @Html.ValueFor(model => model.ReleaseDate, "{0:dd MMMM yyyy} г.")</h3>
            <img src="data:image;base64,@Convert.ToBase64String(Model.Cover)" onerror="this.src='/img/defuserpic.png'"/>
        </div>

        <div class="service-links">
            @Html.ActionLink("Правка", "Edit", new { area="Management", Controller="Albums",id = Model.Id }, null);
            <a href="javascript:document.forms[0].submit()" style="color: red">Удалить</a>
            @using (Html.BeginForm("Delete", "Artists", new { area = "Management" }, FormMethod.Post, new { enctype = "multipart/form-data", name = "formdel", @class = "edit-form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id, "artistId")
            }
        </div>

    </div>
    <div class="right-part">
        
    </div>

</div>

</body>

<script src="/Scripts/del-artist.js" type="text/javascript"></script>
@section ArtistDetails{
    <link href="~/Areas/Management/Styles/album-details.css" rel="stylesheet"/>
    <link href="/Areas/Management/Styles/navpan.css" rel="stylesheet" type="text/css"/>
    <link href="/Areas/Management/Styles/managment-common.css" rel="stylesheet" type="text/css"/>
}