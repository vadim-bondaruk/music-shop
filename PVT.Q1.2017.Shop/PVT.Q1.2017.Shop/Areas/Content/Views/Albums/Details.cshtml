@using Shop.Common.Models
@model Shop.Common.ViewModels.AlbumTracksListViewModel
@{ ViewBag.Title = Model.AlbumDetails.Name;}
<div class="album-details">
    <div class="left">
        <img class="img-thumbnail" src="data:image;base64,@Convert.ToBase64String(Model.AlbumDetails.Cover)" onerror="this.src = '/img/defuserpic.png'"/>
    </div>
    <div class="right">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">
                    <span class="glyphicon glyphicon-list-alt"></span> Треклист
                </h3>
            </div>
            <div class="panel-body">
                <ol>
                    @{
                        if (Model.Tracks != null)
                        {
                            foreach (var track in Model.Tracks)
                            {
                                <li>@track.Name</li>
                            }
                        }
                    }

                </ol>
            </div>
        </div>

    </div>
    <div class="buttons">
        <a class="btn btn-primary" href="@Url.Action("Edit", "Albums", new { Area = "Management", id = Model.AlbumDetails.Id })">
            <span class="glyphicon glyphicon-pencil"></span> Правка
        </a>
    </div>
</div>

@section cssStyles{
    <link href="~/Content/tracks.css" rel="stylesheet"/>
}