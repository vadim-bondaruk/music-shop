@model Shop.Common.Models.AlbumDetailsViewModel

@Html.AntiForgeryToken()
<body>
<h2 class="title" style="margin-top: -23px">Информация об альбоме</h2>

<div class="main-center">
    <div class="col-1">
        <div class="col-2">
            <div class="vertical">
                <h1 style="margin-top: 55px">Исполнитель: @Html.ActionLink(Model.ArtistName, "Details", "Artists", new { area = "Content", id = Model.Artist.Id }, null)</h1>
                <h2>Альбом: @Html.DisplayTextFor(model => model.Name)</h2>
                <h3>Дата выхода: @Html.ValueFor(model => model.ReleaseDate, "{0:dd MMMM yyyy} г.")</h3>
                <div class="image-block">
                    <div class="img-container">
                        <img src="data:image;base64,@Convert.ToBase64String(Model.Cover)" onerror="this.src = '/img/defuserpic.png'"/>
                    </div>
                </div>
                <div class="links" style="width: 500px">
                    <div style="display: inline-block; width: 400px;">
                        <div class="btn-align" style="display: block; width: 500px; text-align: right; margin-top: 15px">
                            <a href="@Url.Action("List", "Albums", new {Area="Content"})" class="btn btn-default">Отмена</a>
                            <a class="btn btn-default"href="@Url.Action("Edit", "Albums", new { Area = "Management", id = Model.Id })">Правка</a>
                            <a class="btn btn-default" href="javascript:document.forms[0].submit()" style="display: inline-block">Удалить</a>
                            @using (Html.BeginForm("Delete", "Albums", new { area = "Management" }, FormMethod.Post, new { enctype = "multipart/form-data", name = "formdel", @class = "edit-form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.HiddenFor(m => m.Id, "artistId")
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>

<script src="/Scripts/del-artist.js" type="text/javascript"></script>
@section cssStyles{
    <link href="~/Styles/tracks.css" rel="stylesheet"/>
}