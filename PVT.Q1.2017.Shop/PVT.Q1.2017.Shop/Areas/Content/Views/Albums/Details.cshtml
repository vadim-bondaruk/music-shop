
@model Shop.Common.ViewModels.AlbumDetailsViewModel

<h2 class="title" style="position: initial; margin-top: 0">@ViewBag.Title</h2>

    <div class="album-details">
        <header class="page-title">@Html.DisplayTextFor(model => model.Name)</header>
        <div class="left">
            <img class="img-thumbnail" src="data:image;base64,@Convert.ToBase64String(Model.Cover)" onerror="this.src = '/img/defuserpic.png'" />
        </div>
        <div class="right">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title"><span class="glyphicon glyphicon-list-alt"></span> Треклист</h3>
                </div>
                <div class="panel-body">
                    <ol>
                        @foreach (var track in (ICollection<Track>)ViewBag.Tracks)
                        {
                            <li>@track.Name</li>
                        }
                    </ol>
                </div>
            </div>

    </div>
    <div class="buttons">
        <a href="@Url.Action("List", "Albums", new { Area = "Content" })" class="btn btn-primary">
            <span class="glyphicon glyphicon-arrow-left"></span> Отмена
        </a>
        <a class="btn btn-primary" href="@Url.Action("Edit", "Albums", new { Area = "Management", id = Model.AlbumDetails.Id })">
            <span class="glyphicon glyphicon-pencil"></span> Правка
        </a>
    </div>
</div>

@section cssStyles{
    <link href="~/Content/tracks.css" rel="stylesheet" />
}