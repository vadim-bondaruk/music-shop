@model IEnumerable<Shop.Common.Models.ViewModels.AlbumViewModel>

@{
    ViewBag.Title = "Albums";
}

<h2>Albums</h2>

<p>
    @*@Html.ActionLink("New Album", "AddOrUpdate", "Albums", new { area = "Management" }, null)*@
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArtistId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ArtistName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArtistId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArtistName)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "AddOrUpdate", "Albums", new { id = item.Id, area = "Management" }, null) |*@
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Delete", "Delete", "Albums", new { id = item.Id, area = "Management" }, null)
        </td>
    </tr>
}

</table>

@section cssStyles {
<link href="/Areas/Management/Styles/navpan.css" rel="stylesheet" type="text/css"/>
    <link href="/Areas/Management/Styles/albums-list.css"/>
}