@model IEnumerable<Shop.Common.ViewModels.AlbumDetailsViewModel>

@{
    ViewBag.Title = "Все альбомы";
}

<title class="title">Все альбомы</title>


    <div class="albums-list">
        <ul class="list-group" style="width: 100%">
            @foreach (var album in Model)
            {
                <li class="list-group-item" id="albums-item" onclick="itemClick(@album.Id)" style="height: 200px; margin-top: 0">
                    <img class="img-thumbnail" src="data:image;base64,@Convert.ToBase64String(album.Cover)" onerror="this.src = '/img/defuserpic.png'" style="width: 200px; height: 200px; display: inline-table; margin-left: 15px; vertical-align: top"/>
                    <div>
                        <h2>@Html.DisplayFor(modelItem => album.Artist.Name)</h2>
                        <h3>@Html.DisplayFor(modelItem => album.Name)</h3>
                        <p>@Html.DisplayFor(modelItem => album.ReleaseDate)</p>
                        <p>Треков: @album.TracksCount</p>
                    </div>
                </li>
            }
        </ul>
    </div>


<script>
    function itemClick(id) {
        window.open("Albums/Details/" + id, "_self");
    }
</script>

@section cssStyles{
   <link href="~/Content/tracks.css" rel="stylesheet" /> 
}