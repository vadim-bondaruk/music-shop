@model IEnumerable<Shop.Common.Models.ViewModels.AlbumDetailsViewModel>

@{
    ViewBag.Title = "Все альбомы";
}

<title class="title">Все альбомы</title>


    <div class="list">
        <ul>
            @foreach (var item in Model)
            {
                <li onclick="itemClick(@item.Id)">
                    <img src="data:image;base64,@Convert.ToBase64String(item.Cover)" onerror="this.src = '/img/defuserpic.png'"/>
                    <div>
                        <h2>@Html.DisplayFor(modelItem => item.Artist.Name)</h2>
                        <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                        <p>@Html.DisplayFor(modelItem => item.ReleaseDate)</p>
                    </div>
                </li>
            }
        </ul>
    </div>


<script>
    function itemClick(id) {
        window.open("Albums/Details/" + id, "_self");
    }
</script>

@section cssStyles{
    <link href="~/Styles/tracks.css" rel="stylesheet"/>
}