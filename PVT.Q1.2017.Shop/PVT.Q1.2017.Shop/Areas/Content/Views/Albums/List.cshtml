@using System
@model System.Collections.Generic.IEnumerable<Shop.Common.ViewModels.AlbumDetailsViewModel>
<title class="title" style="margin: 0">Все альбомы</title>

<div class="albums-list">
    <ul class="list-group" style="width: 100%">
        @foreach (var album in Model)
        {
            <li class="list-group-item" id="albums-item">
                <img class="img-thumbnail" src="data:image;base64,@Convert.ToBase64String(album.Cover)" onerror="this.src = '/img/defuserpic.png'"/>
                <div class="details">
                    <div class="album-title">
                        <p>@Html.ActionLink(album.Name, "Details", "Albums", new { id = album.Id, area = "Content" }, new {@class="album-name"})</p>
                        <p>@Html.ActionLink(album.Artist.Name, "Details", "Artists", new { id = album.Artist.Id, area = "Content" }, new { @class = "artist-name" })</p>
                    </div>
                    @Html.Partial("_Stars", album.Id);
                    <p>Треков: @album.TracksCount</p>
                </div>
            </li>
        }
    </ul>
</div>

<script>
    function itemClick(id) {
        window.open("Albums/Details/" + id, "_self");
    }
</script>

@section cssStyles{
    <link href="~/Content/tracks.css" rel="stylesheet"/>
}