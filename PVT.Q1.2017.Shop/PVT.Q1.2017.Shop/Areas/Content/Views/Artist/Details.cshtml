@using PVT.Q1._2017.Shop.Areas.Content.Extentions
@using Shop.Infrastructure.Enums
@model Shop.Common.ViewModels.ArtistContentViewModel

@{
    ViewBag.Title = "Информация об исполнителе";
}

@{
    bool isAuthenticated = Request.IsAuthenticated;
    bool isAdmin = false;
    bool isSeller = false;
    if (isAuthenticated)
    {
        isAdmin = User.IsInRole(UserRoles.Admin.ToString());
        isSeller = User.IsInRole(UserRoles.Seller.ToString());
    }
}

<div class="panel panel-default">
    <div class="panel-body">
        <h4>@Model.ArtistDetails.Name</h4>

        <div class="row">
            <div class="col-md-4">
                <dl>
                    <dt>
                        Фото
                    </dt>

                    <dd>
                        @if (Model.ArtistDetails.Photo != null && Model.ArtistDetails.Photo.Length > 0)
                        {
                            <img src="data:image;base64,@Convert.ToBase64String(Model.ArtistDetails.Photo)" alt="Фото исполнителя"
                                 class="img-thumbnail img-responsive" style="max-width: 350px; max-height: 400px"/>
                        }
                        else
                        {
                            <div class="no-information">Отсутствует</div>
                        }
                    </dd>
                    
                    <dt style="padding-top: 5px">
                        День рождения/основания
                    </dt>

                    <dd>
                        @if (Model.ArtistDetails.Birthday != null)
                        {
                            @Model.ArtistDetails.Birthday.Value.ToShortDateString()
                        }
                        else
                        {
                            <div class="no-information">Нет информации</div>
                        }
                    </dd>
                </dl>
            </div>
            <div class="col-md-8">
                
                <dl>
                    <dt>
                        Биография
                    </dt>

                    <dd>
                        @if (!string.IsNullOrWhiteSpace(Model.ArtistDetails.Biography))
                        {
                            <div class="form-control" style="height: 400px; overflow-y: auto">
                                @Html.DisplayFor(model => model.ArtistDetails.Biography)
                            </div>
                        }
                        else
                        {
                            <div class="no-information">Нет информации</div>
                        }
                    </dd>
                </dl>
                
            </div>
        </div>

        @if (isAuthenticated)
        {
            if (isAdmin || isSeller)
            {
                <p class="text-center">
                    @Html.BtnCreateArtist()
                    @Html.BtnDeleteArtist(Model.ArtistDetails.Id)
                    @Html.BtnEditArtist(Model.ArtistDetails.Id)
                </p>
            }
        }
    </div>
</div>

<p>
    @Html.ActionLink("Cписок исполнителей", "List", "Artist", new { area = "Content" }, new { @class = "btn btn-sm btn-success" })
</p>

<hr/>

<div>
    <ul class="nav nav-tabs" id="tabsArtistContent">
        <li class="active"><a href="#artistTracks">Треки <span class="badge">@Model.ArtistDetails.TracksCount</span></a></li>
        <li><a href="#artistAlbums">Альбомы <span class="badge">@Model.ArtistDetails.AlbumsCount</span></a></li>
    </ul>
    
    <div class="tab-content">
        <div class="tab-pane fade in active" id="artistTracks">
            <div class="panel">
                <div class="panel-body">
                    @if (isAuthenticated)
                    {
                        if (isAdmin || isSeller)
                        {
                            @Html.BtnCreateTrack(Model.ArtistDetails.Id)
                        }
                    }
                    @Html.Partial("_TracksList", Model.Tracks)
                </div>
            </div>
        </div>
        <div role="tabpanel" class="tab-pane fade" id="artistAlbums">
            <div class="panel">
                <div class="panel-body">
                    @if (isAuthenticated)
                    {
                        if (isAdmin || isSeller)
                        {
                            @Html.BtnCreateAlbum(Model.ArtistDetails.Id)
                        }
                    }
                    @Html.Partial("_AlbumsList", Model.Albums)
                </div>
            </div>
        </div>
    </div>
</div>