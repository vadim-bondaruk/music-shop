@model Shop.Common.Models.ViewModels.ArtistDetailsViewModel
    
@if (Model == null)
{
    <script>
        alert("Информация не найдена!");
    </script>
}
else
{
    <body>
    <h2 class="details-artist-title">Информация об исполнителе</h2>

    <div class="main">
        
        <div class="left-part">
            <div class="col1">
                <h1> @Html.DisplayTextFor(model => model.Name)</h1>
                <img src="data:image;base64,@Convert.ToBase64String(Model.Photo)" alt="~/img/defuserpic.png"/>
            </div>
            
            <div class="service-links">
                @Html.ActionLink("Правка", "Edit", new { id = Model.Id, area = "Management" }, null);
                <a href="javascript:document.forms[0].submit()" style="color: red">Удалить</a>
                @using (Html.BeginForm("Delete", "Artists", new { area = "Management" }, FormMethod.Post, new { enctype = "multipart/form-data", name = "formdel", @class = "edit-form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id, "artistId")
                }
            </div>

        </div>
        <div class="right-part">
            <h2>@Html.ValueFor(model => model.Birthday, "{0:dd MMMM yyyy} г.")</h2>
            <article> @Html.DisplayTextFor(model => model.Biography)</article>
        </div>
       
    </div>
       
    </body>
}

<script src="/Scripts/del-artist.js" type="text/javascript"></script>
@section ArtistDetails{
    <link href="/Areas/Management/Styles/artist-details.css" rel="stylesheet" type="text/css"/>
    <link href="/Areas/Management/Styles/navpan.css" rel="stylesheet" type="text/css"/>
    <link href="/Areas/Management/Styles/managment-common.css" rel="stylesheet" type="text/css"/>
}