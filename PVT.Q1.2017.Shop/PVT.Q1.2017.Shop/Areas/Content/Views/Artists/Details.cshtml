@model Shop.Common.ViewModels.ArtistDetailsViewModel

@Html.AntiForgeryToken()
<body>

<div class="artist-details" style="display: block; width: 100%; min-height: 500px; text-align: left">
    <h2 class="title">@Model.Name</h2>
    <div class="inner">
        <img class="img-thumbnail" src="data:image;base64,@Convert.ToBase64String(Model.Photo)" style="height: 300px; width: 300px" onerror="this.src = '/img/defuserpic.png'"/>
        <p>@Html.DisplayFor(model => model.Biography, new { @readonly = "readonly", id = "ro-textarea" })</p>
    </div>
</div>

<div style="margin: 15px 38px; text-align: right">
    <div class="btn-group" style="margin: 0; width: initial">
        @Html.ActionLink("Слушать", "#", new { id = Model.Id, area = "Content" }, new { @class = "btn btn-primary", id = "btn-listen" })
        @Html.ActionLink("Правка", "Edit", new { id = Model.Id, area = "Management" }, new { @class = "btn btn-primary", id = "btn-edit" })
    </div>
</div>

</body>

<script src="/Scripts/del-artist.js" type="text/javascript"></script>
@section cssStyles{
    <link href="/Styles/tracks.css" rel="stylesheet" type="text/css"/>
}