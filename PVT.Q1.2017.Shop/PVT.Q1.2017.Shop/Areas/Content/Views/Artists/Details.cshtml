@model Shop.Common.Models.ViewModels.ArtistDetailsViewModel

@Html.AntiForgeryToken()
<body>
<h2 class="title">Информация об исполнителе</h2>
    <div class="main-center">
        <div class="row-el">
            <div class="image-block">
                <div style="display: block; text-align: center">
                    <h2 style="font-weight: bold; font-size: 60px; margin-left: -20px;">@Model.Name</h2>
                    <img src="data:image;base64,@Convert.ToBase64String(Model.Photo)" style="max-height: 350px; max-height: 350px" onerror="this.src = '/img/defuserpic.png'" />
                    <h3 style="font-size: 18px">@Html.ValueFor(model => model.Birthday, "{0:dd MMMM yyyy} г.")</h3>
            </div>
            </div>
            <div class="bio">
                @Html.DisplayFor(model => model.Biography, new { @readonly = "readonly", id = "ro-textarea" })
            </div>
        </div>
       

        <div class="button-group">
            @Html.ActionLink("Слушать", "#", new { id = Model.Id, area = "Content" }, new { @class = "btn", id = "btn-listen" })
            @Html.ActionLink("Правка", "Edit", new { id = Model.Id, area = "Management" }, new { @class = "btn", id = "btn-edit" })
            <a class="btn" id="btn-delete" href="javascript:document.forms[0].submit()">Удалить</a>
            @using (Html.BeginForm("Delete", "Artists", new { area = "Management" }, FormMethod.Post, new { enctype = "multipart/form-data", name = "formdel", @class = "edit-form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id, "artistId")
            }
        </div>
    </div>

</body>

<script src="/Scripts/del-artist.js" type="text/javascript"></script>
@section cssStyles{
    <link href="/Styles/tracks.css" rel="stylesheet" type="text/css"/>
}