@using Microsoft.SqlServer.Server
@model IEnumerable<Shop.Common.Models.ViewModels.ArtistDetailsViewModel>

@{
    ViewBag.Title = "Все исполнители";
}

<title class="title">Все исполнители</title>


<div class="list">
    <ul>
        @foreach (var item in Model)
        {
            <li onclick="itemClick(@item.Id)">
                <img src="data:image;base64,@Convert.ToBase64String(item.Photo)" onerror="this.src = '/img/defuserpic.png'"/>
                <div>
                    <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                    <p>@Html.DisplayFor(modelItem => item.Biography)</p>
                </div>
            </li>
        }
    </ul>
</div>

<script>
    function itemClick(id) {
        var url = '@Url.Action("Details", "Artists", new { id = "*"})';
        window.location.href = url.replace('*', encodeURIComponent(id));
    }
</script>

@section cssStyles{
    <link href="~/Styles/tracks.css" rel="stylesheet"/>
}