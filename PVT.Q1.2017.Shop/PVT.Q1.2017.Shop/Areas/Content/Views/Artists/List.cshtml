@model ICollection<Shop.Common.ViewModels.ArtistDetailsViewModel>

@{ViewBag.Title = "Все исполнители";}

<div class="artists-list">
    <ul class="list-group" id="slist">
        @foreach (var item in Model)
        {
            <li class="list-group-item" onclick="window.location.href = '@Url.Action("Details", "Artists", new { id = item.Id, area = "Content"})'">
                <div class="artists-list-image">
                    <img class="img-thumbnail" src="data:image;base64,@Convert.ToBase64String(item.Photo)" onerror="src = '/img/defuserpic.png'"/>
                </div>
                <div class="text-box">
                    <div class="info">
                        <h3 style="margin-top: 0">@Html.DisplayFor(modelItem => item.Name)</h3>
                        <p>@Html.DisplayFor(modelItem => item.Biography)</p>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>

@section cssStyles{
    <link href="~/Content/tracks.css" rel="stylesheet" /> 
}