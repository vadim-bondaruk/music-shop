@model Shop.Common.ViewModels.TrackDetailsViewModel

<li class="list-group-item">
    <div style="display: inline-block; width: 100%">
        <img class="img-thumbnail" src="data:image;base64,@Convert.ToBase64String(Model.Image)" onerror="this.src = '/img/defuserpic.png'" />
        <div class="details">
            <div>
                <a style="font-size: 24px" href="@Url.Action("Details", "Tracks", new { area = "Content", id = Model.Id })">@Html.DisplayFor(i => Model.Name)</a>
                <a style="font-size: 24px" href="@Url.Action("Details", "Artists", new { area = "Content", id = Model.Id })">@Html.DisplayFor(i => Model.ArtistName)</a>
            </div>
            @Html.Partial("_Stars")
        </div>
    </div>
    @Html.Partial("Audio/AudioSection", @Url.Action("GetTrackAsStream", "Tracks", new { area = "Content", id = Model.Id }))
</li>
