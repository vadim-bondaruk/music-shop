@model ICollection<Shop.Common.ViewModels.TrackViewModel>

<table class="table table-hover table-responsive">
    @foreach (var track in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(track.Name, "Details", "Track", new
                {
                    id = track.Id,
                    area = "Content"
                }, new
                {
                    @class = "btn btn-link",
                    title = "Нажмите, чтобы посмотреть подробную информацию о треке"
                })
            </td>
            <td>
                @Html.ActionLink(track.Artist.Name, "Details", "Artist", new
                {
                    id = track.Artist.Id,
                    area = "Content"
                }, new
                {
                    @class = "btn btn-link",
                    title = "Нажмите, чтобы перейти к информации об исполнителе"
                })
            </td>
            <td>
                @Html.Partial("RatingPartialView", track.Rating)
            </td>
            <td>
                @Html.DisplayFor(m => track.Price)
            </td>
            <td>
                @Html.Partial("EditTrackButtonPartialView", track.Id)

                @Html.Partial("DeleteTrackButtonPartialView", track.Id)
                
                @if (track.Price != null)
                {
                    @Html.Partial("EditTrackPriceButtonPartialView", track.Id)
                }
                else
                {
                    @Html.Partial("AddTrackPriceButtonPartialView", track.Id)
                }
            </td>
            @if (track.Price != null)
            {
                <td>
                    @Html.Partial("BuyTrackButtonPartialView", track.Id)
                </td>
            }
        </tr>
    }
</table>
