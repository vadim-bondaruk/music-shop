@model Shop.Common.Models.ViewModels.TrackAlbumListViewModel
@{
    ViewBag.Title = "Track Albums List";
}

<h2>@Model.TrackName</h2>
<h4>@Model.ArtistName</h4>

<table class="table">
    <tr>
        <th>
            Album
        </th>
        <th>
            ReleaseDate
        </th>
        <th>
            Artist
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Albums) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReleaseDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ArtistName)
            @Html.HiddenFor(modelItem => item.ArtistId)
        </td>
        <td>
            @if (User.IsInRole("EditAlbums"))
            {
                @Html.ActionLink("Edit", "AddOrUpdate", "Album", new { id = item.Id, area = "Management" }, null)
                @:|
                @Html.ActionLink("Delete", "Delete", "Album", new { id = item.Id, area = "Management" }, null)
                @:|
            }
            @Html.ActionLink("Details", "Details", "Album", new { id = item.Id }, null)
        </td>
    </tr>
}

</table>
