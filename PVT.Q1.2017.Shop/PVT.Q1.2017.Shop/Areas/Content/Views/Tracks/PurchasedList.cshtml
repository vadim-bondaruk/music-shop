@using System.Web.Optimization
@model ICollection<Shop.Common.ViewModels.PurchasedTrackViewModel>

@{ ViewBag.Title = "Мои Треки"; }
<audio controls controlsList="nodownload" id="audio-hidden" type="audio/mp3" autoplay="autoplay" style="display: none"></audio>
<div class="purchased-tracklist">
    <div class="tracks-list col-md-12">
        <ul class="list-group">
            @foreach (var item in Model)
            {
                @Html.Partial("_PurchasedTrackListItem", item)
            }
        </ul>
    </div>
</div>

@section scripts {
    <script src="~/Scripts/get-audio.js"></script>
}

@section cssStyles{
    @Styles.Render("~/bundles/cssTracks")
}