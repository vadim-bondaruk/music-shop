@model PVT.Q1._2017.Shop.Areas.Management.ViewModels.AlbumManagementViewModel

@{
    ViewBag.Title = "Создание нового альбома";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @if (Model != null && Model.ArtistId != null && Model.ArtistId > 0)
        {
            <h4>@Model.ArtistName</h4>
        }
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2" for="ReleaseDate">Дата релиза</label>
            <div class="col-md-10">
                @if (Model != null && Model.ReleaseDate != null)
                {
                    <input name="ReleaseDate" type="text" class="form-control datecontrol" placeholder="Дата релиза" value="Model.ReleaseDate" />
                }
                else
                {
                    <input name="ReleaseDate" type="text" class="form-control datecontrol" placeholder="Дата релиза"/>
                }

                @Html.ValidationMessageFor(model => model.ReleaseDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Список альбомов", "List", "Album", new { area = "Content" }, null)
</div>
