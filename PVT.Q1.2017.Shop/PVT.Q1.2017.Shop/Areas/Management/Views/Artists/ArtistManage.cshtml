@model PVT.Q1._2017.Shop.Areas.Management.Models.AlbumManagmentViewModel


@using (Html.BeginForm("New", "Albums", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <div id="albumDetails">
        <ul>
            <li>
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { placeholder = "Name" } })
            </li>
            <li>
                @Html.EditorFor(m => m.Cover, new { htmlAttributes = new { placeholder = "Cover" } })
            </li>
            <li>
                @Html.EditorFor(m => m.ReleaseDate, new { htmlAttributes = new { placeholder = "ReleaseDate" } })
            </li>
        </ul>
    
        <button type="submit" class="add-button">Add</button>
    </div>
}

@section ManageStyle{
   <link href="/Areas/Management/Styles/AddNewTrack.css" rel="stylesheet" type="text/css"/>}