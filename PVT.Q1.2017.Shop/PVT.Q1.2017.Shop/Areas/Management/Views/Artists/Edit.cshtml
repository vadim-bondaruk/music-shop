@model PVT.Q1._2017.Shop.Areas.Management.ViewModels.ArtistManagementViewModel

<body>
<h2 class="title" style="margin-top: 2px; position: initial;">Редактирование информации об исполнителе</h2>
@using (Html.BeginForm("Edit", "Artists", FormMethod.Post, new { enctype = "multipart/form-data", name = "formreg", @class = "edit-form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.Photo)

    <div class="main-center">
        <div class="col-1">
            <img class="img-thumbnail" id="artist-img" onclick="document.formreg.PostedPhoto.click()" onerror="this.src = '/img/defuserpic.png'" src="data:image;base64,@Convert.ToBase64String(Model.Photo)"/>
            <div class="details">
                <ul class="list-group" style="width: 600px">
                    <li class="list-group-item">
                        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Исполнитель" }, value = Model.Name })
                    </li>
                    <li class="list-group-item">
                        @Html.EditorFor(m => m.Birthday, new { htmlAttributes = new { @class = "form-control", placeholder = "Дата рождения/основания", type = "text", value = Model.Birthday } })
                    </li>
                    <li class="list-group-item">
                        @Html.TextAreaFor(e => e.Biography, new { @class = "form-control", placeholder = "Биография", value = Model.Biography })
                    </li>
                </ul>
            </div>
            <div class="buttons">
                <div >
                    <a class="btn btn-primary" id="add-track" aria-label="Left Align" href="@Url.Action("New", "Tracks", new { area = "Management", id = Model.Id })"><span class="glyphicon glyphicon-plus"></span> Трек</a>
                    <a class="btn btn-primary" id="add-album" aria-label="Left Align" href=@Url.Action("New", "Albums", new { area = "Management", id = Model.Id })><span class="glyphicon glyphicon-plus"></span> Альбом</a>
                    <button type="submit" class="btn btn-success" id="btn-save" aria-label="Left Align"><span class="glyphicon glyphicon-floppy-disk"></span> Сохранить</button>
                    <a class="btn btn-danger" id="btn-delete" href="javascript:document.forms[1].submit()"><span class="glyphicon glyphicon-remove"></span> Удалить</a>
                </div>
            </div>
        </div>
    </div>

    <input type="file" id="file" name="PostedPhoto" style="display: none" value=@Model.Photo/>
}
    @using (Html.BeginForm("Delete", "Artists", new { area = "Management" }, FormMethod.Post, new { enctype = "multipart/form-data", name = "formdel", @class = "edit-form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id, "artistId")
    }

<script src="/Scripts/jquery-3.2.0.min.js"></script>
<script src="/Scripts/openfile.dialog.js" type="text/javascript"></script>
<script src="/Scripts/file-change.js" type="text/javascript"></script>

</body>

@section cssStyles{
    <link href="/Styles/tracks.css" rel="stylesheet" type="text/css"/>
}