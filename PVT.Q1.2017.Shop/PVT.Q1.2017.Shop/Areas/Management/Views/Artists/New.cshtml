@model PVT.Q1._2017.Shop.Areas.Management.Models.ArtistManagmentViewModel
<body>
<h2 class="op-title">New artist registration</h2>
@using (Html.BeginForm("New", "Artists", FormMethod.Post, new { enctype = "multipart/form-data", name = "formreg" }))
{
    @Html.AntiForgeryToken()
    <div id="artistDetails">
        <ul>
            <li>
                @Html.EditorFor(m => m.Name, new { htmlAttributes = new { placeholder = "Artist" } })
            </li>
            <li>
                @Html.EditorFor(m => m.Birthday, new { htmlAttributes = new { placeholder = "Birthday", type = "text" } })
            </li>
            <li>
                @Html.TextAreaFor(e => e.Biography, 10, 155, new { @placeholder = "Biography" })
            </li>
            
            <li class="cover-file">
                <div>
                    <input id="file-path" type="text" placeholder="Cover" />
                    <input id="browsefile-button" type="button" value="Browse..."
                           onclick="document.formreg.filediag.click()" />
                </div>
                <input  type="file" id="file" name="filediag" style="display: none" />

            </li>
        </ul>
        <button type="submit" class="add-button">Add</button>
    </div>
}
    
    <script src="/Scripts/jquery-3.2.0.min.js"></script>
    <script src="/Scripts/openfile.dialog.js" type="text/javascript"></script>
    
</body>

@section ManageStyle{
    <link href="/Areas/Management/Styles/details.css" rel="stylesheet" type="text/css"/>}