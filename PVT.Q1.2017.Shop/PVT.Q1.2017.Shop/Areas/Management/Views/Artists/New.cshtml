@model PVT.Q1._2017.Shop.Areas.Management.ViewModels.ArtistManagementViewModel
@{ ViewBag.Title = "Новый исполнитель";}

<div class="artist-new">

    @using (Html.BeginForm("New", "Artists", FormMethod.Post, new { enctype = "multipart/form-data", name = "formreg" }))
    {
        @Html.AntiForgeryToken()
        <div>
            <div class="row">
                <div class="col-sm-6">
                    <img class="img-thumbnail" id="artist-img"
                         onclick="document.formreg.PostedPhoto.click()" onerror="src = '/img/defuserpic.png'" src="data:image;base64"/>
                </div>
                <div class="col-sm-6">
                    <ul class="list-group" style="width: 100%">
                        <li class="list-group-item" style="text-align: left !important;">
                            @Html.DisplayNameFor(m => m.Name)
                            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Исполнитель", style = "width: 100%; margin-top: 0;" } })
                        </li>
                        <li class="list-group-item">
                            @Html.DisplayNameFor(m => m.Birthday)
                            @Html.EditorFor(m => m.Birthday, new { htmlAttributes = new { @class = "form-control datecontrol", placeholder = "Дата рождения", type = "text", id = "item-birthday", style = "width: 100%" } })
                        </li>
                        <li class="list-group-item">
                            @Html.DisplayNameFor(m => m.Biography)
                            @Html.TextAreaFor(m => m.Biography, new { @class = "form-control", placeholder = "Биография", id = "item-bio", style = "heigth: 200px; width: 100%" })
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="buttons">
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-floppy-disk"></span> Сохранить
            </button>
        </div>
        <input type="file" id="file" name="PostedPhoto" style="display: none"/>
    }
</div>

@section scripts
{
    <script src="/Scripts/file-change.js" type="text/javascript"></script>
}

@section cssStyles{
    <link href="~/Content/tracks.css" rel="stylesheet" /> 
}