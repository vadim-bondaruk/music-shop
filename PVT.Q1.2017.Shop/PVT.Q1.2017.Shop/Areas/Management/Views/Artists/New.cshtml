@model Shop.Common.Models.ViewModels.ArtistManageViewModel
<body>
<h2 class="reg-new-artist-title">Регистрация нового исполнителя</h2>
@using (Html.BeginForm("New", "Artists", FormMethod.Post, new { enctype = "multipart/form-data", name = "formreg" }))
{
    @Html.AntiForgeryToken()
    <div class="center">
        <div class="row">
            <div class="leftpan">
                <img id="artist-img" onclick="document.formreg.UploadedImage.click()" src="data:image;base64"/>
            </div>
            <div class="rightpan">
                <div class="inputs">
                    <ul class="new-artist-items">
                        <li>
                            @Html.EditorFor(m => m.Name, new { htmlAttributes = new { placeholder = "Исполнитель" } })
                        </li>
                        <li>
                            @Html.EditorFor(m => m.Birthday, new { htmlAttributes = new { placeholder = "Дата рождения", type = "text", id = "item-birthday" } })
                        </li>
                        <li>
                            <input id="photo-input" type="text" placeholder="Фото" onclick="document.formreg.UploadedImage.click()"/>
                        </li>
                        <li>
                            @Html.TextAreaFor(e => e.Biography, new { placeholder = "Биография", id = "item-bio" })
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="bottom-panel">
            <button type="submit" class="save-button">Сохранить</button>
        </div>
        <input type="file" id="file" name="UploadedImage" style="display: none"/>

    </div>
}
<script src="/Scripts/jquery-3.2.0.min.js"></script>
<script src="/Scripts/openfile.dialog.js" type="text/javascript"></script>
<script src="/Scripts/image-change.js" type="text/javascript"></script>
</body>

@section ArtistEdit
{
    <link href="/Areas/Management/Styles/artist-new.css" rel="stylesheet" type="text/css"/>
    <link href="/Areas/Management/Styles/navpan.css" rel="stylesheet" type="text/css"/>
}