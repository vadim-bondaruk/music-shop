@model PVT.Q1._2017.Shop.Areas.Management.ViewModels.TrackManagementViewModel

<body>
<h2 class="title" style="margin-top: 15px; position: initial">Информация о треке</h2>
<div style="width: 100%; display: block">
    <div style="text-align: -webkit-center">
        <div style="display: block">
            <img id="artist-img" onclick="document.formreg.PostedPhoto.click()" class="img-thumbnail" onerror="this.src = '/img/defuserpic.png'" src="data:image;base64,@Convert.ToBase64String(Model.Image)"/>
            <ul class="list-group">
                <li>
                    <p class="list-group-item">@Html.DisplayNameFor(m => m.Name)</p>
                    @Html.TextBoxFor(m => m.Name)
                </li>
                <li>
                    <p class="list-group-item">@Html.DisplayNameFor(m => m.Artist)</p>
                    @Html.TextBoxFor(m => m.Artist.Name)
                </li>
                <li>
                    <p class="list-group-item">@Html.DisplayNameFor(m => m.ReleaseDate)</p>
                    @Html.TextBoxFor(m => m.ReleaseDate)
                </li>
                <li>
                    @Html.DisplayNameFor(m => m.GenreId)
                    @Html.DropDownListFor(model => model.GenreId, new SelectList(Model.Genres, "Id", "Name"), new { @class = "form-control" })
                </li>
                <li>
                    <p class="list-group-item">@Html.DisplayNameFor(m => m.Duration)</p>
                    @Html.TextBoxFor(m => m.Duration)
                </li>
                <li>
                    <p class="list-group-item">@Html.DisplayNameFor(m => m.Price)</p>
                    @Html.TextBoxFor(m => m.Price)
                </li>
            </ul>
            <div style="margin-top: 15px; width: 500px; text-align: right">
                <a href="JavaScript:window.history.back(1)" class="btn btn-primary">Назад</a>
                <a href="@Url.Action("New", "Tracks", new { Area = "Management", id = Model.Id })" class="btn btn-primary">Сохранить</a>
                <a href="@Url.Action("Delete", "Tracks", new { Area = "Management", id = Model.Id })" class="btn btn-primary">Удалить</a>
            </div>
        </div>
        <input type="file" id="file" name="PostedPhoto" style="display: none" value=@Model.PostedImage />
    </div>
</div>
</body>

@section cssStyles
{
    <link href="~/Styles/tracks.css" rel="stylesheet"/>
}