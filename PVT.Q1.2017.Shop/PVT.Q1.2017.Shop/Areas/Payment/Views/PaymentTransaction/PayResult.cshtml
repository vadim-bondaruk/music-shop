@model Shop.Common.ViewModels.PayResultsViewModel

@{
    ViewBag.Title = "Финансовые результаты";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>PayResult</h2>*@

<div>
    <hr />

    @if(Model!=null&&Model.Payments!=null)
    {
    <table class="table">
        <tr>
            <th>
                Валюта
            </th>
            <th>
                Сумма в валюте
            </th>
            <th>
                Кросс-курс
            </th>
            @*<th>
                Итог
            </th>*@
            <th></th>
        </tr>

        @foreach (var item in Model.Payments)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Currency.ShortName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CrossCourse)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Amount * item.CrossCourse)
                </td>*@
                @*<td>
                        @Html.ActionLink("Подробно", "Details", new { id = item.Id })
                    </td>*@
            </tr>
        }

    </table>
    }

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Total)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Total)
        </dd>

    </dl>
</div>
<p>
    @*@Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
    @Html.ActionLink("Back to List", "Index")*@
</p>
