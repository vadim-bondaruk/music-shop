@model IEnumerable <Shop.Common.ViewModels.PaymentTransactionViewModel>

@if (Model != null)
{
    <table class="table">
        <tr>
            <th>
                Идентификатор
            </th>
            <th>
                Сумма
            </th>
            <th>
                Пользователь
            </th>
            <th>
                Валюта
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CurrencyShortName)
                </td>
                @*<td>
                    @Html.ActionLink("Подробно", "Details", new { id = item.Id })
                </td>*@
            </tr>
        }

    </table>
}

