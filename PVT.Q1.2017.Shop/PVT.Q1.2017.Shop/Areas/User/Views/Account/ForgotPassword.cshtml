@model PVT.Q1._2017.Shop.ViewModels.ForgotPasswordViewModel
@{
    ViewBag.Title = "Восстановление пароля";
}

    <h2>@ViewBag.Title.</h2>
   
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        <div class="user-reg form-horizontal">
            <hr />
            <h4>Введите ваш ник или e-mail</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.EditorFor(model => model.UserIdentity, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.UserIdentity, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Выслать мне пароль" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("Войти", "Login") | @Html.ActionLink("Регистрация", "Register")
    </div>

