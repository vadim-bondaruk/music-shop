@model Shop.Common.ViewModels.RatingViewModel

<div>
    @if (Model != null)
    {
        @Html.Partial("_Rating", Model.Rating)
        <div style="white-space: nowrap; padding-left: 3px">
            <strong>@Model.Rating</strong>
            (@Model.VotesCount оценок, @Model.CommentsCount комментариев)
        </div>
    }
    else
    {
        <div class="zero-stars"></div>
    }
</div>
