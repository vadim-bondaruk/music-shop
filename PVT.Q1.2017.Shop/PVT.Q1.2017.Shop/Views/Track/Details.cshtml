@model Shop.Common.Models.Track

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Details</title>
</head>
<body>
<div id="trackInfo">
    <div id="text-block">
        <h1>Track details</h1>

        <ul class="detailsList">
            <li>
                <span class="titles">Artist:</span> <a href="https://www.google.by/webhp?sourceid=chrome-instant&amp;ion=1&amp;espv=2&amp;ie=UTF-8#q=@Model.Artist.Name">@(Model.Artist.Name)</a>
            </li>

            <li>
                <span class="titles">Name:</span> <a href="#">@Model.Name</a>
            </li>

            <li>
                <span class="titles">Album:</span> <a href="#">@Model.Album.Name</a>
            </li>

            <li>
                <span class="titles">Genre:</span> <a>@Model.Genre</a>
            </li>

            <li>
                <span class="titles">Release date:</span> @Model.Album.ReleaseDate
            </li>
            <li>
                <span class="titles">Duration:</span> @Model.Duration
            </li>
            <li>
                <span class="titles">Price:</span> @Model.TrackPrices.FirstOrDefault().Amount $
            </li>
        </ul>

        @*<img src="@Model.ImageUrl" alt="album cover" id="trackImage"/>
        <div class="button-wrapper">
